<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pprior.quizz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />
    <!-- Permisos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <permission
        android:name="com.pprior.quizz.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.pprior.quizz.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.pprior.quizz.QuizzApp"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SchoolQuizz" >

        <!-- Actividad principal -->
        <activity
            android:name="com.pprior.quizz.ui.activities.MainActivity"
            android:exported="true"
            android:screenOrientation="locked" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para seleccionar el tipo de pregunta -->
        <activity
            android:name="com.pprior.quizz.ui.activities.QuestionTypeActivity"
            android:exported="false" />

        <!-- Actividad dialogo para lanzar preguntas -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.LaunchQuestionActivity"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad generica de dialogo para añadir preguntas -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.AddQuestionActivity"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de si o no -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.types.AddYesNoQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de estrellas -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.types.AddStarsQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de barra progresiva -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.types.AddBarQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para añadir preguntas de otro tipo -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.types.AddOtherQuestion"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Actividad dialogo para editar preguntas -->
        <activity
            android:name="com.pprior.quizz.ui.activities.dialogs.EditQuestionActivity"
            android:exported="false"
            android:theme="@style/ThemeDialog" />

        <!-- Servicio http -->
        <service
            android:name="com.pprior.quizz.data.services.HttpService"
            android:enabled="true" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.pprior.quizz.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>